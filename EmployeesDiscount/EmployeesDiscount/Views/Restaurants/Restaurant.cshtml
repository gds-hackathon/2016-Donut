@model EmployeesDiscount.Models.RestautantViewModel
@{
    ViewBag.Title = "Restaurant Management";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Restaurant", "Restaurants", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    <h4>Order:</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.RestautantName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
        @Html.TextBoxFor(m => m.RestautantName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Discount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Discount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

